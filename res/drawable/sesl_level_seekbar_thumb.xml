<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/sesl_thumb_control_fill_color_activated" />
                    <stroke android:width="2.0dip" android:color="@color/sesl_thumb_disable_seekbar_level" />
                    <size android:height="20.0dip" android:width="20.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/sesl_thumb_control_fill_color_activated" />
                    <stroke android:width="2.0dip" android:color="@color/sesl_thumb_control_color_activated" />
                    <size android:height="20.0dip" android:width="20.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>