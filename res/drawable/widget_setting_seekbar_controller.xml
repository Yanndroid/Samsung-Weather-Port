<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/widget_setting_seek_bar_controller_inner_color" />
            <stroke android:width="2.0dip" android:color="@color/widget_setting_seek_bar_disabled_color" />
            <size android:height="@dimen/setting_seek_bar_controller_size" android:width="@dimen/setting_seek_bar_controller_size" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <solid android:color="@color/widget_setting_seek_bar_controller_inner_color" />
            <stroke android:width="2.0dip" android:color="@color/widget_setting_seek_bar_tick_color" />
            <size android:height="@dimen/setting_seek_bar_controller_size" android:width="@dimen/setting_seek_bar_controller_size" />
        </shape>
    </item>
</selector>